<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MainFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--start vertical recycler view-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_main_vertRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/fragment_main_linLayout">
        </android.support.v7.widget.RecyclerView>
        <!--end vertical recycler view-->

        <LinearLayout
            android:id="@+id/fragment_main_linLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/fragment_main_vertRecyclerView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center">

            <Button
                android:id="@+id/fragment_main_resetBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"/>

            <Button
                android:id="@+id/fragment_main_newGameBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Game"/>

        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/fragment_main_winConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/fragment_main_winLinLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/fragment_main_winSmileyImgView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/ic_smiley"/>

                <TextView
                    android:id="@+id/fragment_main_winTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_main_winTextView_text"
                    android:textSize="20sp"/>

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>