<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MainFragment">

    <!--start vertical recycler view-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_main_vertRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--start horizontal recycler view-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_main_horizRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </android.support.v7.widget.RecyclerView>
        <!--end horizontal recycler view-->

    </android.support.v7.widget.RecyclerView>
    <!--end vertical recycler view-->

</FrameLayout>