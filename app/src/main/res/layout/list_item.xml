<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/list_item_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:text="@string/hidden"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:background="@drawable/block_background_selector"/>

    <ImageView
        android:id="@+id/list_item_flagImgView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_flag"
        android:background="@drawable/ic_block_background"
        android:visibility="invisible"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/list_item_mineImgView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_mine"
        android:background="@drawable/ic_block_pressed_background"
        android:visibility="invisible"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/list_item_mineWXImgView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_mine_w_x"
        android:background="@drawable/ic_block_pressed_background"
        android:visibility="invisible"
        android:gravity="center"/>

</android.support.constraint.ConstraintLayout>